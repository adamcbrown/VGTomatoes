<div class="col-xs-8">
    <%if @error_msg!=nil%>
        <h3><%=@error_msg%></h3>
    <%end%>
    <form action="login_user" method="POST">
        <p>Email: </p>
        <input type="text" name="email"></input>
        <br>
        <p>Password: </p>
        <input type="password" name="password"></input>
        <br>
        <input type="submit" value="Login"></input>
    <form>
</div>

<div class="col-xs-4">
    <a href="/register">Create New Account</a> | <a href="/forgot">Forgot Password</a>
</div>